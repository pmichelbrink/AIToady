<Window x:Class="AIToady.Harvester.ScheduleForumsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Schedule Forums" Height="400" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Content="Forum Address:" VerticalAlignment="Center"/>
            <TextBox x:Name="ForumAddressTextBox" Grid.Column="1" Height="25" VerticalContentAlignment="Center" Margin="5,0"/>
            <Button Grid.Column="2" Content="Add" Width="60" Height="25" Click="AddButton_Click"/>
        </Grid>
        
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ListBox x:Name="ForumsListBox" SelectionMode="Extended" SelectionChanged="ForumsListBox_SelectionChanged"/>
            <Button x:Name="RemoveButton" Grid.Row="1" Content="Remove" Width="80" Height="25" Margin="0,5,0,0" HorizontalAlignment="Right" IsEnabled="False" Click="RemoveButton_Click"/>
        </Grid>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Height="25" Margin="0,0,5,0" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="80" Height="25" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
