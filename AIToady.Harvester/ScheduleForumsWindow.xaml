<Window x:Class="AIToady.Harvester.ScheduleForumsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scheduled Forums" Height="400" Width="500"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Content="Forum Address:" VerticalAlignment="Center"/>
            <TextBox x:Name="ForumAddressTextBox" Grid.Column="1" Height="25" VerticalContentAlignment="Center" Margin="5,0" KeyDown="ForumAddressTextBox_KeyDown"/>
            <Button Grid.Column="2" Content="Add" Width="60" Height="25" Click="AddButton_Click"/>
        </Grid>
        
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <ListBox x:Name="ForumsListBox"
                     Grid.ColumnSpan="2"
                     SelectionMode="Extended" SelectionChanged="ForumsListBox_SelectionChanged"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                <Button Content="Import" Width="80" Height="25" Margin="0,0,5,0" Click="ImportButton_Click"/>
                <Button x:Name="ExportButton" Content="Export" Width="80" Height="25" Margin="0,0,5,0" Click="ExportButton_Click"/>
            </StackPanel>
            <Button x:Name="RemoveButton"
                    Grid.Row="1"
                    Grid.Column="1"
                    Content="Remove"
                    Width="80"
                    Height="25"
                    HorizontalAlignment="Right"
                    IsEnabled="False"
                    Click="RemoveButton_Click"
                    Margin="0,0,0,0" />
        </Grid>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Height="25" Margin="0,0,5,0" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="80" Height="25" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
